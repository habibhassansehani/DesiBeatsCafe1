# MongoDB Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Secret for authentication (generate a random string)
JWT_SECRET=your-secret-key-here

# ImageKit Configuration (get from https://imagekit.io/dashboard/developer/api-keys)
IMAGEKIT_PUBLIC_KEY=public_xxxxxxxxxxxxx
IMAGEKIT_PRIVATE_KEY=private_xxxxxxxxxxxxx
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your-imagekit-id

# Frontend ImageKit (same values as above, prefixed with VITE_ for client-side access)
VITE_IMAGEKIT_PUBLIC_KEY=public_xxxxxxxxxxxxx
VITE_IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your-imagekit-id
